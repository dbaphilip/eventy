<%= form_for event do |f| %>

<div class="row">
  <div class="col-6">
    <%= render "shared/errors", object: event %>

    <div class="my-4">
      <%= f.text_field :name, class: "inter form-control", placeholder: "Name"
      %>
    </div>

    <div class="mb-4">
      <%= f.text_field :location, class: "inter form-control", placeholder:
      "Location" %>
    </div>

    <div class="mb-4">
      <%= f.number_field :price, class: "inter form-control", placeholder:
      "Price" %>
    </div>

    <div class="mb-4">
      <%= f.number_field :capacity, class: "inter form-control", placeholder:
      "Event capacity" %>
    </div>
  </div>

  <div class="col-6">
    <div class="mb-4 datetime_select">
      <%= f.date_select :starts_at, { ampm: false, order: [:day, :month, :year]
      }, { class: "form-select inter" } %>
    </div>

    <div class="mb-4">
      <%= f.text_field :image_file_name, class: "inter form-control",
      placeholder: "image file name" %>
    </div>

    <div class="mb-4">
      <%= f.text_area :description, rows: 5, class: "inter form-control",
      placeholder: "Describe the event" %>
    </div>

    <% if event.new_record? %> <%= f.submit "Create", class: "boxshadow btn
    btn-lg gochi btn-primary" %> <% else %> <%= f.submit "Save", class:
    "boxshadow btn btn-lg gochi btn-primary" %> <% end %>
  </div>
</div>

<% end %>
