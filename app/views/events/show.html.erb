<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="d-flex">
        <%= image_tag @event.image_file_name %>
        <h1 class="gochi"><%= @event.name %></h1>
      </div>

      <div class="d-flex justify-content-between">
        <p class="gochi pill"><%= day_and_time(@event) %></p>
        <p class="gochi pill price"><%= price(@event) %></p>
        <p class="gochi pill"><%= pluralize(@event.capacity, "spot") %></p>
        <p class="gochi pill"><%= @event.location %></p>
      </div>

      <p class="inter fs-5"><%= @event.description %></p>

      <div class="d-flex justify-content-end">
        <p class="gochi action mx-2">
          <%= link_to "Edit", edit_event_path(@event) %>
        </p>

        <p class="gochi action mx-2">
          <%= link_to "Registrations", event_registrations_path(@event) %>
        </p>

        <p class="gochi action mx-2">
          <%= link_to "Register", new_event_registration_path(@event) %>
        </p>

        <p class="gochi action delete mx-2">
          <%= link_to "Delete", delete_event_path(@event) %>
        </p>
      </div>
    </div>
  </div>
</div>
